<h1>{{title}}</h1>

<section>
	<p>Your users are:</p>
	<article id='users-list'>

	</article>
</section>


<script>
	var ajaxObj = {
		url: 'http://js-server-jb.herokuapp.com/users',
		type: 'get',
		dataType: 'json',
		success: function(data) {
			console.log(data);
			var list = $('#users-list');
			for (var user in data) {
				var account=data[user];
				var li = $('<li>');
				$(li).html(account.email + ', ' + account.password);
				$(list).append(li);
			}
		},
		error: function(err) {
			console.log(err);
			$('body').html('Sorry, our server is down.');
		}
	};

	// when the document is ready
	$(document).ready(function(event) {
		$.ajax(ajaxObj);
	});
</script>